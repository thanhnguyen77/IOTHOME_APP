<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="top"
    android:background="#FFFFFF"
    android:layout_height="match_parent"
    >

    <ImageView
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:src="@drawable/smart_farm" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/khung_vien"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/nhietdo"
                android:layout_width="40dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="30"
                android:textAlignment="center"
                android:textSize="30dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:src="@drawable/nhietdo" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/khung_vien"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/doam"
                android:layout_width="40dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="30"
                android:textAlignment="center"
                android:textSize="30dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:src="@drawable/doam" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/khung_vien"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/doamdat"
                android:layout_width="40dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="30"
                android:textAlignment="center"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/khigas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:src="@drawable/soil_moisture" />

        </LinearLayout>




    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"

        android:layout_marginTop="10dp"
        android:layout_height="100dp"

        android:gravity="center"
        android:orientation="horizontal">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="100dp"
           android:layout_weight="1">
           <LinearLayout
               android:layout_width="100dp"
               android:layout_height="100dp"
               android:layout_marginLeft="10dp">


               <ImageView
                   android:id="@+id/light"
                   android:layout_width="100dp"
                   android:layout_height="match_parent"

                   android:layout_gravity="center"
                   android:layout_marginRight="5dp"
                   android:src="@drawable/maybom" />



           </LinearLayout>
           <Button
               android:id="@+id/device1"
               android:layout_width="50dp"
               android:layout_gravity="center"
               android:layout_height="50dp"
               android:layout_marginLeft="10dp"
               android:background="@drawable/off"/>

       </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp">


                <ImageView
                    android:id="@+id/light"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"

                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/maybom" />



            </LinearLayout>
            <Button
                android:id="@+id/device2"
                android:layout_width="50dp"
                android:layout_gravity="center"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/on"/>

        </LinearLayout>



    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"

        android:layout_marginTop="30dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp">


                <ImageView
                    android:id="@+id/light"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"

                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/maybom" />



            </LinearLayout>
            <Button
                android:id="@+id/device3"
                android:layout_width="50dp"
                android:layout_gravity="center"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/on"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp">


                <ImageView
                    android:id="@+id/light"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"

                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/maybom" />



            </LinearLayout>
            <Button
                android:id="@+id/device4"
                android:layout_width="50dp"
                android:layout_gravity="center"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/on"/>

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_text_input"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="1" />

        <Button
            android:id="@+id/button_set"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Set" />

        <TextView
            android:id="@+id/text_view_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="00:05" />

        <Button
            android:id="@+id/button_start_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Button" />

        <Button
            android:id="@+id/button_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Button" />
    </LinearLayout>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="30dp" />


</LinearLayout>